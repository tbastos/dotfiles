[color]
  diff = auto
  status = auto
  branch = auto

[core]
  autocrlf = input
  excludesfile = ~/.dotfiles/git/excludes

[diff]
  tool = vimdiff
  submodule = log

[difftool]
  prompt = false

[merge]
  tool = vimdiff3

[mergetool "vimdiff3"]
  cmd = vim -g -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[status]
  submoduleSummary = true

[push]
  recurseSubmodules = check

[fetch]
  recurseSubmodules = on-demand

